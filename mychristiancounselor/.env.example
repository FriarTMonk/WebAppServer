# MyChristianCounselor - Environment Configuration
# Copy this file to .env and fill in your values

# ====================
# Database Configuration
# ====================
DATABASE_URL="postgresql://user:password@localhost:5432/mychristiancounselor?schema=public"

# ====================
# JWT Configuration
# ====================
# Must be at least 32 characters long
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# ====================
# Email Service (Postmark)
# ====================
POSTMARK_API_TOKEN="your-postmark-api-token"
FROM_EMAIL="noreply@yourdomain.com"
SUPPORT_EMAIL="support@yourdomain.com"

# ====================
# AI Services
# ====================
OPENAI_API_KEY="sk-your-openai-api-key"
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# ====================
# Payment Service (Stripe)
# ====================
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# ====================
# Application URLs
# ====================
WEB_APP_URL="http://localhost:3699"
CORS_ORIGIN="http://localhost:3699"

# ====================
# Application Configuration
# ====================
APP_NAME="MyChristianCounselor"
PORT=3697
NODE_ENV="development"  # development | production | test
