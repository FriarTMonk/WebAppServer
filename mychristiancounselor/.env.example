# MyChristianCounselor - Environment Configuration
# Copy this file to .env and fill in your values

# ====================
# Database Configuration
# ====================
# Development (local)
DATABASE_URL="postgresql://user:password@localhost:5432/mychristiancounselor?schema=public&connection_limit=10&pool_timeout=20"

# Production (AWS RDS) - Use this format in production
# DATABASE_URL="postgresql://user:password@your-rds-endpoint.rds.amazonaws.com:5432/mychristiancounselor_production?schema=public&sslmode=require&connection_limit=20&pool_timeout=20&connect_timeout=10"
#
# Connection pool parameters:
# - connection_limit: Max number of connections (10 for dev, 20+ for prod)
# - pool_timeout: Max seconds to wait for connection (20 seconds)
# - connect_timeout: Max seconds to wait for initial connection (10 seconds)
# - sslmode=require: Required for production (AWS RDS, secure connections)

# ====================
# JWT Configuration
# ====================
# Must be at least 32 characters long for security
# Generate with: openssl rand -base64 48
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"
JWT_REFRESH_SECRET="your-super-secret-jwt-refresh-key-min-32-characters-long"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# ====================
# Email Service (Postmark)
# ====================
POSTMARK_API_TOKEN="your-postmark-api-token"
FROM_EMAIL="noreply@yourdomain.com"
SUPPORT_EMAIL="support@yourdomain.com"

# ====================
# AI Services
# ====================
OPENAI_API_KEY="sk-your-openai-api-key"
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# ====================
# Payment Service (Stripe)
# ====================
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# ====================
# Application URLs
# ====================
WEB_APP_URL="http://localhost:3699"
CORS_ORIGIN="http://localhost:3699"

# ====================
# Application Configuration
# ====================
APP_NAME="MyChristianCounselor"
PORT=3697
NODE_ENV="development"  # development | production | test

# ====================
# Error Tracking (Sentry) - Optional
# ====================
# Sign up for free tier: https://sentry.io (5,000 errors/month)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
