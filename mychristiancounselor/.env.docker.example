# Docker Compose Environment Variables
# Copy this file to .env before running docker-compose

# JWT Configuration (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long

# Email Configuration (REQUIRED for email features)
POSTMARK_API_TOKEN=your-postmark-api-token
POSTMARK_FROM_EMAIL=noreply@yourdomain.com

# AI Service Configuration (REQUIRED - choose one)
AI_SERVICE=anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
# OR use OpenAI
# AI_SERVICE=openai
# OPENAI_API_KEY=your-openai-api-key

# Stripe Configuration (REQUIRED for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_MONTHLY_PRICE_ID=price_your-monthly-price-id
STRIPE_ANNUAL_PRICE_ID=price_your-annual-price-id

# Optional JWT Expiration
# JWT_ACCESS_EXPIRATION=15m
# JWT_REFRESH_EXPIRATION=7d
