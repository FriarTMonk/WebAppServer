# Deployment Workflow Template
# Copy this file to deploy.yml and configure for your deployment target
# Remove .example extension and add your deployment credentials to GitHub Secrets

name: Deploy to Production

on:
  push:
    branches: [main, master]
    tags:
      - 'v*'
  workflow_dispatch:

jobs:
  deploy:
    name: Deploy to Production
    runs-on: ubuntu-latest
    environment: production

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Generate Prisma Client
        run: npx prisma generate --schema=./packages/api/prisma/schema.prisma

      - name: Build applications
        run: |
          npx nx build api --configuration=production
          npx nx build web --configuration=production

      # ==============================================
      # OPTION 1: Deploy to Docker Registry + Server
      # ==============================================
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Build and push Docker images
        run: |
          docker build -t ${{ secrets.DOCKER_USERNAME }}/mcc-api:${{ github.sha }} -f packages/api/Dockerfile .
          docker build -t ${{ secrets.DOCKER_USERNAME }}/mcc-web:${{ github.sha }} -f packages/web/Dockerfile .
          docker push ${{ secrets.DOCKER_USERNAME }}/mcc-api:${{ github.sha }}
          docker push ${{ secrets.DOCKER_USERNAME }}/mcc-web:${{ github.sha }}
          docker tag ${{ secrets.DOCKER_USERNAME }}/mcc-api:${{ github.sha }} ${{ secrets.DOCKER_USERNAME }}/mcc-api:latest
          docker tag ${{ secrets.DOCKER_USERNAME }}/mcc-web:${{ github.sha }} ${{ secrets.DOCKER_USERNAME }}/mcc-web:latest
          docker push ${{ secrets.DOCKER_USERNAME }}/mcc-api:latest
          docker push ${{ secrets.DOCKER_USERNAME }}/mcc-web:latest

      - name: Deploy to server via SSH
        uses: appleboy/ssh-action@v1.0.0
        with:
          host: ${{ secrets.DEPLOY_HOST }}
          username: ${{ secrets.DEPLOY_USER }}
          key: ${{ secrets.DEPLOY_SSH_KEY }}
          script: |
            cd /opt/mychristiancounselor
            docker-compose pull
            docker-compose up -d
            docker-compose exec -T api npx prisma migrate deploy

